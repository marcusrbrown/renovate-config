{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  description: 'Use the config preset for the @marcusrbrown/renovate-config repository',
  extends: ['github>marcusrbrown/renovate-config#v1.7.0'],
  automergeType: 'pr',
  postUpgradeTasks: {
    commands: ['yarn install', 'yarn run format'],
    executionMode: 'branch',
  },
  prCreation: 'immediate',
  customManagers: [
    {
      customType: 'regex',
      datasourceTemplate: 'github-releases',
      fileMatch: ['^default\\.json$', '^personal\\.json$'],
      matchStrings: [
        '["\']github>(?<depName>(bfra-me|marcusrbrown)\\/renovate-config)(?:(?::|\\/\\/)(?<path>.+?))?#(?<currentValue>.+?)["\']',
      ],
      versioningTemplate: 'semver',
    },
    {
      extends: ['schedule:daily'],
      matchPackageNames: ['ghcr.io/renovatebot/renovate', 'renovatebot/renovate'],
    },
  ],
}
