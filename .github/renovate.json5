{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: [
    "Use the config preset for the @marcusrbrown/renovate-config repository",
  ],
  extends: [
    "github>marcusrbrown/renovate-config",
    "github>sanity-io/renovate-config:semantic-commit-type",
  ],
  packageRules: [
    {
      matchPackageNames: [
        "@vercel/ncc",
        "conventional-changelog-conventionalcommits",
        "semantic-release",
        "typescript",
        "@semantic-release/{/,}**",
      ],
      automergeType: "pr",
      semanticCommitType: "build",
    },
    {
      description: "Keep the bfra-me/renovate-action action pinned.",
      matchPackageNames: ["bfra-me/renovate-action"],
      rangeStrategy: "pin",
      updatePinnedDependencies: false,
    },
  ],
  postUpgradeTasks: {
    commands: ["pnpm run bootstrap"],
    executionMode: "branch",
  },
  prCreation: "immediate",
  rebaseWhen: "behind-base-branch",
}
