{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  description: 'Use the config preset for the @marcusrbrown/renovate-config repository',
  extends: ['github>marcusrbrown/renovate-config#v1.15.1'],
  automergeType: 'pr',
  packageRules: [
    {
      matchFileNames: ['.github/workflows/main.yaml'],
      semanticCommitType: 'ci',
    },
    {
      matchDatasources: ['docker'],
      semanticCommitType: 'build',
    },
    {
      matchDepTypes: ['dependencies'],
      semanticCommitType: 'build',
    },
    {
      matchPackageNames: [
        '@vercel/ncc',
        'conventional-changelog-conventionalcommits',
        'semantic-release',
        'typescript',
      ],
      matchPackagePrefixes: ['@semantic-release/'],
      semanticCommitType: 'build',
    },
    {
      matchDepNames: ['bfra-me/renovate-config'],
      semanticCommitType: 'fix',
    },
  ],
  postUpgradeTasks: {
    commands: ['npm install -g pnpm@8', 'pnpm install --frozen-lockfile', 'git checkout -- .npmrc', 'pnpm run format'],
    executionMode: 'branch',
  },
  prCreation: 'immediate',
  customManagers: [
    {
      customType: 'regex',
      datasourceTemplate: 'github-releases',
      fileMatch: ['\\.json[5]?$'],
      matchStrings: [
        '["\']github>(?<depName>(bfra-me|marcusrbrown)\\/renovate-config)(?:(?::|\\/\\/)(?<path>.+?))?#(?<currentValue>.+?)["\']',
      ],
      versioningTemplate: 'semver',
    },
  ],
}
