{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  description: ['Use the config preset for the @marcusrbrown/renovate-config repository'],
  automergeType: 'pr',
  extends: [
    'github>marcusrbrown/renovate-config',
    'github>sanity-io/renovate-config:semantic-commit-type',
    'npm:unpublishSafe',
  ],
  packageRules: [
    {
      matchPackageNames: ['conventional-changelog-conventionalcommits', 'semantic-release', '@semantic-release/{/,}**'],
      semanticCommitType: 'build',
    },
    {
      description: 'Enable SemVer digest pinning of @bfra-me GitHub actions, reusable workflows, and Renovate config presets.',
      matchPackageNames: ['@bfra.me/{/,}**', 'bfra-me/{/,}**'],
      rangeStrategy: 'pin',
      updatePinnedDependencies: false,
    },
    {
      description: 'Enable SemVer digest pinning of @bfra-me GitHub actions, reusable workflows, and Renovate config presets.',
      matchPackageNames: ['@bfra.me/{/,}**', 'bfra-me/{/,}**'],
      matchUpdateTypes: ['major'],
      updatePinnedDependencies: true,
    },
  ],
  postUpgradeTasks: {
    commands: ['pnpm run bootstrap', 'pnpm run format'],
    executionMode: 'branch',
  },
  prCreation: 'not-pending',
  rebaseWhen: 'auto',
}
