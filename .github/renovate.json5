{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  description: ['Use the config preset for the @marcusrbrown/renovate-config repository'],
  extends: ['github>marcusrbrown/renovate-config', 'github>marcusrbrown/renovate-config:personal'],
  packageRules: [
    {
      matchDepNames: ['bfra-me/renovate-config'],
      matchPackageNames: [
        '@vercel/ncc',
        'conventional-changelog-conventionalcommits',
        'semantic-release',
        'typescript',
      ],
      matchPackagePrefixes: ['@semantic-release/'],
      semanticCommitType: 'build',
    },
  ],
  postUpgradeTasks: {
    commands: [
      'npm install -g pnpm@8',
      'pnpm install --frozen-lockfile --ignore-scripts',
      'git checkout -- .npmrc',
      'pnpm run format',
    ],
    executionMode: 'branch',
  },
}
