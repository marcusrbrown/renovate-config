{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Include @marcusrbrown's personal config presets",
  "extends": [
    "github>bfra-me/renovate-config:maintenance/internal#v2.1.0",
    "github>marcusrbrown/renovate-config:onboarding#v1.12.1",
    ":assignAndReview(marcusrbrown)",
    ":prConcurrentLimitNone",
    ":pinAllExceptPeerDependencies"
  ],
  "suppressNotifications": ["prIgnoreNotification"],
  "vulnerabilityAlerts": {
    "extends": ["github>bfra-me/renovate-config:automerge/enabled#v2.1.0"]
  },
  "schedule": ["at any time"],
  "packageRules": [
    {
      "automergeType": "pr",
      "prCreation": "immediate",
      "matchRepositories": [
        "marcusrbrown/.github",
        "marcusrbrown/copiloting",
        "marcusrbrown/dockerfiles",
        "marcusrbrown/esphome-life",
        "marcusrbrown/gpt",
        "marcusrbrown/ha-config",
        "marcusrbrown/marcusrbrown",
        "marcusrbrown/renovate-config",
        "marcusrbrown/some-expect",
        "marcusrbrown/sparkle",
        "marcusrbrown/tokentoilet"
      ]
    }
  ]
}
