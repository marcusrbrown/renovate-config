{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Include personal config presets",
  "extends": [":assignAndReview(marcusrbrown)", ":prConcurrentLimitNone", ":pinAllExceptPeerDependencies"],
  "suppressNotifications": ["prIgnoreNotification"],
  "vulnerabilityAlerts": {
    "extends": ["github>bfra-me/renovate-config:automerge/enabled"]
  },
  "schedule": ["at any time"],
  "packageRules": [
    {
      "automergeType": "pr",
      "prCreation": "immediate",
      "matchRepositories": [
        "marcusrbrown/.github",
        "marcusrbrown/copiloting",
        "marcusrbrown/marcusrbrown",
        "marcusrbrown/renovate-config",
        "marcuwrbrown/sparkle"
      ]
    }
  ]
}
