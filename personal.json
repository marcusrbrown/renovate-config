{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Include @marcusrbrown's personal config presets",
  "extends": [
    "github>bfra-me/renovate-config:maintenance/internal#v2.3.2",
    "github>marcusrbrown/renovate-config:onboarding#v1.15.4",
    ":assignAndReview(marcusrbrown)",
    ":prConcurrentLimitNone",
    ":pinAllExceptPeerDependencies"
  ],
  "suppressNotifications": ["prIgnoreNotification"],
  "schedule": ["at any time"],
  "packageRules": [
    {
      "automergeType": "pr",
      "prCreation": "immediate",
      "matchRepositories": [
        "marcusrbrown/.github",
        "marcusrbrown/copiloting",
        "marcusrbrown/dockerfiles",
        "marcusrbrown/esphome-life",
        "marcusrbrown/gpt",
        "marcusrbrown/ha-config",
        "marcusrbrown/marcusrbrown",
        "marcusrbrown/renovate-config",
        "marcusrbrown/some-expect",
        "marcusrbrown/sparkle",
        "marcusrbrown/tokentoilet"
      ]
    },
    {
      "description": "Automerge my project dependencies without a minimum release age.",
      "automergeType": "branch",
      "matchDepPatterns": ["^bfra-me\\/", "^marcusrbrown\\/"],
      "matchPackagePatterns": ["^@bfra\\.me\\/", "^@marcusrbrown\\/"],
      "matchSourceUrlPrefixes": ["https://github.com/bfra-me", "https://github.com/marcusrbrown"],
      "minimumReleaseAge": null
    },
    {
      "additionalBranchPrefix": "",
      "branchTopic": "reconfigure",
      "matchFileNames": [
        ".github/renovate.json5",
        ".github/renovate.json",
        ".gitlab/renovate.json5",
        ".gitlab/renovate.json",
        ".renovaterc.json5",
        ".renovaterc.json",
        ".renovaterc",
        "renovate.json5",
        "renovate.json"
      ]
    }
  ]
}
